rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admin email whitelist — same as addran-advisor-chat
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email in ['c.rode@tcu.edu', '0expatriate0@gmail.com'];
    }

    // Course catalog data — public read, admin-only write
    match /dcda_config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Analytics — anonymous increment by anyone, admin-only read
    match /dcda_analytics/{collection}/{subcol}/{docId} {
      allow read: if isAdmin();
      allow create, update: if true;
    }

    // Submissions — create-only (anonymous, no PII), admin-only read, immutable
    match /dcda_submissions/{submissionId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ── English Advising Wizard ──

    // English config — public read, admin-only write
    match /english_config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // English analytics — anonymous increment by anyone, admin-only read
    match /english_analytics/{collection}/{subcol}/{docId} {
      allow read: if isAdmin();
      allow create, update: if true;
    }

    // English submissions — create-only (anonymous), admin-only read, immutable
    match /english_submissions/{submissionId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }
  }
}
